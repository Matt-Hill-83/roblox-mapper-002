{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noLib": true,
    "moduleDetection": "force",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": ["node_modules/@rbxts"],
    "baseUrl": "src"
  }
}
